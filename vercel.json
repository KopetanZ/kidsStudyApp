{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "src/**/*.{js,ts,jsx,tsx}": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/subject/:id",
      "destination": "/subject/[id]"
    },
    {
      "source": "/level/:id", 
      "destination": "/level/[id]"
    }
  ]
}